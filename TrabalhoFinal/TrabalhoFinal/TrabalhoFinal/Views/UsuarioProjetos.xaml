<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabalhoFinal.Views.UsuarioRepositorios">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical">
      <Label Text="Projetos por Usuário" VerticalOptions="Center" HorizontalOptions="Center" />
      <Entry x:Name="usuario" Placeholder="Identificação do Usuário" VerticalOptions="Center" HorizontalOptions="Center"/>
      <Button Text="Listar Projetos" VerticalOptions="Center" HorizontalOptions="Center" Clicked="ListarProjetos"/>

      <StackLayout Padding="50" HorizontalOptions="Center" VerticalOptions="Center">
        <ListView x:Name="repositories"/>
      </StackLayout>
      
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>